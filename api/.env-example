# Configurações da Aplicação Django
# Estas são as variáveis de ambiente necessárias para o funcionamento do projeto
# Copie este arquivo para .env e preencha com seus valores reais

# Chave secreta do Django - IMPORTANTE: Gere uma chave segura e única para produção
SECRET_KEY=sua_chave_secreta_aqui

# Modo de depuração - Use 'True' para desenvolvimento e 'False' para produção
DEBUG=True

# Hosts permitidos - lista separada por vírgulas
ALLOWED_HOSTS=localhost,127.0.0.1

# Configurações do Banco de Dados
# Padrão é SQLite, mas você pode configurar para outros bancos de dados
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3


# Configurações do Servidor API
API_HOST=localhost
API_PORT=8000